prefix = @prefix@
install = @INSTALL@
libpath = @OMEGA_LIBPATH@
ocamlopt = @OCAMLOPT@
ocamlflags = @OCAMLFLAGS@

libdir = $(libpath)/caml

default: all

include Makefile.src

all: $(binaries)

install: all
	$(install) -d -m 755 $(prefix)/bin
	$(install) -m 755 $(binaries) $(prefix)/bin

clean:
	-rm -f $(binaries) *.cmx *.cmi *.o

%.cmi: %.mli
	$(ocamlopt) $(ocamlflags) -I $(libdir) -c $<
%.cmx: %.ml
	$(ocamlopt) $(ocamlflags) -I $(libdir) -c $<

.PHONY: all install clean
